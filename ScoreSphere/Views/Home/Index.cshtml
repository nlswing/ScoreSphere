@{
    ViewData["Title"] = "MATCH CENTER LIVE";
    Layout = "_Layout";
}

<div class="text-center mb-4">
    <button type="button" onclick="filterMatches('all')">All</button>
    <button type="button" onclick="filterMatches('scheduled')">Scheduled</button>
    <button type="button" onclick="filterMatches('finished')">Finished</button>
    <button type="button" onclick="filterMatches('live')">Live</button>
</div>

<table class="table match-center">
    <thead>
        <tr>
            <th>Date</th>
            <th colspan="2">Team 1</th>
            <th></th>
            <th colspan="2">Team 2</th>
        </tr>
    </thead>
    <tbody id="listMatches">
        <!-- Your match rows go here -->
    </tbody>
</table>

@section Scripts{ 
    <script src="~/lib/signalr/signalr.js"></script>
    <script src="~/js/home.js"></script>
}

<style>
    .match-center th, .match-center td {
        text-align: center;
        vertical-align: middle;
    }

    .team-logo {
        max-width: 50px; /* Adjust the value based on your preference */
        max-height: 50px; /* Adjust the value based on your preference */
        margin-right: 10px; /* Add more padding between the logo and team name */
    }
</style>
