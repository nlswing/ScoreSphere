@{
    ViewData["Title"] = "MATCH CENTER LIVE";
    Layout = "_Layout";
}

<div class="text-center mb-4">
    <button type="button" onclick="filterMatches('all')" style="width: 80px;">All</button>
    <button type="button" onclick="filterMatches('scheduled')" style="width: 100px;">Scheduled</button>
    <button type="button" onclick="filterMatches('finished')" style="width: 100px;">Finished</button>
    <button type="button" onclick="filterMatches('live')" style="width: 80px;">Live</button>
</div>

<table class="table match-center">
    <thead>
        <tr>
            <th>Date</th>
            <th colspan="2">Team 1</th>
            <th></th>
            <th colspan="2">Team 2</th>
        </tr>
    </thead>
    <tbody id="listMatches">
        <!-- Your match rows go here -->
    </tbody>
</table>

@section Scripts{ 
    <script src="~/lib/signalr/signalr.js"></script>
    <script src="~/js/home.js"></script>
}

<style>
    .match-center th, .match-center td {
        text-align: center;
        vertical-align: middle;
    }

    .team-logo {
        max-width: 50px;
        max-height: 50px;
        margin-right: 10px;
    }
</style>
